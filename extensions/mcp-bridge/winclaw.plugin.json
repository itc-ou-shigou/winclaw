{
  "id": "mcp-bridge",
  "name": "MCP Bridge",
  "description": "Bridge MCP (Model Context Protocol) servers into WinClaw agent tools. Supports stdio and SSE transports.",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "servers": {
        "type": "array",
        "description": "List of MCP servers to connect to",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "transport"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Unique server name used for tool namespacing (e.g. 'chrome-devtools')"
            },
            "transport": {
              "type": "string",
              "enum": ["stdio", "sse"],
              "description": "Transport type: 'stdio' for subprocess, 'sse' for HTTP Server-Sent Events"
            },
            "command": {
              "type": "string",
              "description": "For stdio: command to execute (e.g. 'npx', 'node', 'python')"
            },
            "args": {
              "type": "array",
              "items": { "type": "string" },
              "description": "For stdio: command arguments"
            },
            "env": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "For stdio: additional environment variables"
            },
            "url": {
              "type": "string",
              "description": "For sse: server URL"
            },
            "timeoutMs": {
              "type": "number",
              "description": "Connection timeout in milliseconds (default: 30000)"
            },
            "autoReconnect": {
              "type": "boolean",
              "description": "Whether to automatically reconnect on failure (default: true)"
            },
            "maxReconnectAttempts": {
              "type": "number",
              "description": "Maximum reconnection attempts (default: 3)"
            }
          }
        }
      }
    }
  },
  "uiHints": {
    "servers": {
      "label": "MCP Servers",
      "help": "Configure MCP servers that provide tools to WinClaw agents"
    }
  }
}
